@baseUrl = http://localhost:3000/api
@authToken = {{login.response.body.token}}
@masterToken = {{masterLogin.response.body.token}}
### Register a new user
POST {{baseUrl}}/auth/register
Content-Type: application/json

{
    "email": "test@example.com",
    "password": "Password123",
    "displayName": "Test User",
    "dateOfBirth": "2000-01-01",
    "country": "Lebanon"
}

### Login with registered user
# @name login
POST {{baseUrl}}/auth/login
Content-Type: application/json

{
    "email": "test@example.com",
    "password": "Password123"
}
### Get current user profile (requires authentication)
GET {{baseUrl}}/auth/me
Authorization: Bearer {{authToken}}

### Update user profile (requires authentication)
PUT {{baseUrl}}/auth/me
Authorization: Bearer {{authToken}}
Content-Type: application/json

{
    "displayName": "Updated Name",
    "password": "new updated password",
    "country": "Beirut"
}

### Master user login
# @name masterLogin
POST {{baseUrl}}/auth/login
Content-Type: application/json

{
    "email": "master@example.com",
    "password": "Master123"
}
### Get all users (requires master access)
GET {{baseUrl}}/master/users
Authorization: Bearer {{masterToken}}

### Update user profile (requires master access)
PUT {{baseUrl}}/master/users/9
Authorization: Bearer {{masterToken}}
Content-Type: application/json